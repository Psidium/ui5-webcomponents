<div class="ui5-tokenizer--wrapper">
	<div class="{{classes.content}}" @delete={{ctr._tokenDelete}} @select={{ctr._tokenSelect}}>
		<div id="ui5-tokenizer-token-placeholder" style="display: inline-block; height: 100%; margin-left: -3px">
			<div style="display: inline-block"></div>
		</div>
		{{#each ctr.tokens}}
			<div class="ui5-tokenizer--token--wrapper">
				<slot name="{{this._slot}}"></slot>
			</div>
		{{/each}}
	</div>

	{{#if showNMore}}
		<span @click="{{ctr._openOverflowPopover}}" class="ui5-tokenizer-more-text">{{hiddenTokensCount}} more</span>
	{{/if}}
</div>
