<div {{> controlData}}
	class="{{classes.main}}"
	style="{{styles.main}}"
	tabindex="{{tabIndex}}">
	<div
		class="sapWCSelectLabel"
		@click="{{ctr._fnClickSelectBox}}">
		<ui5-label>{{ctr._text}}</ui5-label>
	</div>

	{{#if ctr.options}}
		<ui5-popover
			placement-type="Bottom"
			hide-header="true"
			hide-arrow="true"
			horizontal-align="Stretch">
				<ui5-list separators="None">
					{{#each ctr.options}}
						<ui5-li
								id="{{this._id}}"
                                type="Active"
								value="{{this.value}}"
								icon="{{this.icon}}"
								?selected="{{this.selected}}"
						>
							{{this.textContent}}
						</ui5-li>
					{{/each}}
				</ui5-list>
		</ui5-popover>
	{{/if}}

	<ui5-icon
		src="sap-icon://slim-arrow-down"
		class="sapWCSelectDropDownIcon"
		@press="{{ctr._fnClickSelectBox}}"
	></ui5-icon>
</div>
